extends ../layouts/main-layout.pug

block content
        if errorMessage 
            div.alert.alert-info.col-sm-8 !{errorMessage};
        form(action="/register" method="POST")
            input(type="hidden" name="_csrf" value=`${csrfToken}`)
            .form-group.row
                label(for="name").col-sm-2.col-form-label İsim:
                .col-sm-6.my-2
                    input(type="text" name="name").form-control#name

            .form-group.row
                label(for="email").col-sm-2.col-form-label Email:
                .col-sm-6.my-2
                    input(type="text" name="email").form-control#email

            .form-group.row
                label(for="password").col-sm-2.col-form-label Şifre:
                .col-sm-6.my-2
                    input(type="password" name="password").form-control#password
            .form-group.row
                .col-sm-6
                    input(type="submit" value="Kaydol").btn.btn-success.mt-2