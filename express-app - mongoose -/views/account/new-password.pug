extends ../layouts/main-layout.pug

block content
        if errorMessage 
            div.alert.alert-danger.col-sm-8 #{errorMessage};
        form(action="/new-password" method="POST")
            input(type="hidden" name="_csrf" value=`${csrfToken}`)
            input(type="hidden" name="userId" value=`${userId}`)
            input(type="hidden" name="passwordToken" value=`${passwordToken}`)
            .form-group.row
                label(for="password").col-sm-2.col-form-label Yeni Şifre:
                .col-sm-6.my-2
                    input(type="password" name="password").form-control#Password

            .form-group.row
                .col-sm-6.my-2
                    input(type="submit" value="Şifreni Yenile").btn.btn-success.mt-2