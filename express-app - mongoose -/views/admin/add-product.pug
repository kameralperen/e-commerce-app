extends ../layouts/main-layout.pug

block content
        if errorMessage 
            div.alert.alert-danger.col-sm-12 !{errorMessage}

        form(action="/admin/add-product" method="POST" enctype="multipart/form-data")
            input(type="hidden" name="_csrf" value=`${csrfToken}`)
            .form-group.row
                label(for="name").col-sm-2.col-form-label Ürün ismi:
                .col-sm-10.my-2
                    input(type="text" name="name").form-control#name
            .form-group.row
                label(for="price").col-sm-2.col-form-label Fiyat:
                .col-sm-10.my-2
                    input.form-control#price(type="text" name="price")
            .form-group.row
                label(for="imageUrl").col-sm-2.col-form-label Fotoğraf:
                .col-sm-10.my-2
                    input(type="file" name="image").form-control-file#image
            //- .form-group.row
            //-     label(for="categoryid").col-sm-2.col-form-label Kategori:
            //-     select(name="categoryid").col-sm-10.form-control#categoryid 
            //-         option(value="-1") Kategori Seçiniz.
            //-             each category in categories 
            //-                 option(value=`${category.id}`) #{category.name}   
            .form-group.row
                label(for="description").col-sm-2.col-form-label Açıklama:
                .col-sm-10.my-2
                    textarea.form-control(id="editor" name="description" cols='30' rows='10')
            .form-group.row
                .col-sm-10.offset-sm-2
                    input(type="submit" value="Ürün Ekle").btn.btn-success.mt-2