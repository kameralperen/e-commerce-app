extends ../layouts/main-layout.pug

block content 
    .col-lg-12
        form(action="/admin/categories" method="POST")
            input(type="hidden" name="_csrf" value=`${csrfToken}`)
            input(type="hidden" name="id" value=`${category._id}`)

            .form-group.row
                input(type="hidden" name="_csrf" value=`${csrfToken}`)
                label(for="name").col-sm-2.col-form-label Kategori ismi:
                .col-sm-10.my-2
                    input(type="text" name="name" value=`${category.name}`).form-control#name

            .form-group.row
                label(for="description").col-sm-2.col-form-label Açıklama:
                .col-sm-10.my-2
                    textarea(name="description" cols='30' rows='10').form-control#description #{category.description}
            .form-group.row
                .col-sm-10
                    input(type="submit" value="Kategoriyi Güncelle").btn.btn-success.mt-2

