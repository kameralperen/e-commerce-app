extends ../layouts/main-layout.pug

block content 
    .col-lg-12
        form(action="/admin/add-category" method="POST")
            .form-group.row
                input(type="hidden" name="_csrf" value=`${csrfToken}`)
                label(for="name").col-sm-2.col-form-label Kategori ismi:
                .col-sm-10.my-2
                    input(type="text" name="name").form-control#name

            .form-group.row
                label(for="description").col-sm-2.col-form-label Açıklama:
                .col-sm-10.my-2
                    textarea(name="description" cols='30' rows='10').form-control#description
            .form-group.row
                .col-sm-10.offset-sm-2
                    input(type="submit" value="Kategori Ekle").btn.btn-success.mt-2

